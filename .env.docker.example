# Docker Environment Configuration
# Copy this file to .env for docker-compose

# Application Configuration
SECRET_KEY=your-very-secure-secret-key-for-production
NETSCAN_PORT=2530

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Network Scanning Configuration
SCAN_INTERVAL_MINUTES=30
NETWORK_RANGE=auto

# Startup and Scan Behavior
NETSCAN_DISABLE_STARTUP_SCAN=true
NETSCAN_ENABLE_OS_DETECTION=false

# Database Configuration (automatically set for Docker)
# DATABASE_URL is managed by docker-compose
# REDIS_URL is managed by docker-compose