# NetScan Environment Configuration
# Copy this file to .env and customize as needed

# Application Configuration
SECRET_KEY=your-secret-key-here-change-in-production
NETSCAN_PORT=2530

# Database Configuration (optional)
# DATABASE_URL=sqlite:///netscan.db

# Admin User Configuration (optional)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=admin123

# Network Scanning Configuration
SCAN_INTERVAL_MINUTES=30
NETWORK_RANGE=auto

# Startup and Scan Behavior
# Disable automatic scan on service startup (recommended to prevent conflicts)
NETSCAN_DISABLE_STARTUP_SCAN=true
# Disable OS detection by default (requires root/setcap privileges)
NETSCAN_ENABLE_OS_DETECTION=false

# Rate Limiting Backend (optional)
# REDIS_URL=redis://localhost:6379/0

# Optional: Disable SQLite auto-healing (not recommended)
# DISABLE_SQLITE_AUTOHEAL=1